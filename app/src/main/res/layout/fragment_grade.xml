<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".screens.GradeFragment"
    tools:ignore="ExtraText">>


    <RelativeLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:background="@drawable/fon_home_main_old"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="495dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:alpha="0.8"
            android:background="@drawable/rounded_login_ui"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <TextView
                android:id="@+id/Fio_student"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="75dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="TextView"
                android:textSize="26dp" />
            <TextView
                android:id="@+id/uid_student"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:layout_below="@id/Fio_student"
                android:gravity="center"
                android:textStyle="italic"
                android:text="ID: "
                android:textSize="18dp" />
            <TextView
                android:id="@+id/birthday_student"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Birthday:"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="16dp"/>
        </RelativeLayout>


        <de.hdodenhof.circleimageview.CircleImageView

            android:id="@+id/circleimage_user"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            android:src="@drawable/unknown_user"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>