<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:minHeight="60dp"
    app:cardCornerRadius="8dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:id="@+id/relate_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            >

            <TextView
                android:id="@+id/texttime_nested_timetable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="16dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="0dp"
                android:text="TextView"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relate_top"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleimage_nested_timetable"
                app:civ_border_width="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:paddingBottom="6dp"
                android:src="@drawable/unknown_user"
                app:civ_border_color="#FF000000"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
            <TextView
                android:id="@+id/texthed_nested_timetable"
                android:layout_width="240dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginStart="6dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@+id/circleimage_nested_timetable"
                android:gravity="left"
                android:layout_height="wrap_content"
                android:text="Типо предмет" />
            <TextView
                android:id="@+id/username_nested_timetable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/circleimage_nested_timetable"
                android:layout_below="@+id/texthed_nested_timetable"
                android:layout_marginStart="6dp"
                android:textSize="14sp"
                android:paddingBottom="6dp"
                android:text="TextView" />
        </RelativeLayout>


    </RelativeLayout>


</androidx.cardview.widget.CardView>